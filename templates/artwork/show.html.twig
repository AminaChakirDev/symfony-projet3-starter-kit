{% extends 'base.html.twig' %}

{% block title %}Artwork
{% endblock %}

{% block body %}
	<h1 class="text-center">{{ artwork.name }}</h1>

	<section class="py-5">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-12 col-md-6 col-lg-4">
					<img class="img-fluid" src="{{ vich_uploader_asset(artwork) }}" alt="{{ artwork.name }}">
				</div>
			</div>
		</div>
	</section>
	<p>{{ artwork.description }}</p>

	<div class="text-center">
		<a href="{{ path('app_artwork_index') }}">Retour aux oeuvres</a>
&nbsp;|&nbsp;
    <a href="{{ path('app_artwork_edit', {'id': artwork.id}) }}">Modifier</a>
	</div>

	{{ include('artwork/_delete_form.html.twig') }}

{% endblock %}
